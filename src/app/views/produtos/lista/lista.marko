<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/estatico/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/estatico/css/fontawesome.min.css" />
        <link rel="stylesheet" href="/estatico/css/huntercodesafio.css" />
    </head>
    <body>
    <header class="cabecalhoPrincipal">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-4">
                        <h1 class="logo"><img src="/estatico/imagens/logo_bouthin.png" alt="Hunter Co" height="45px" width="auto" /></h1>
                    </div>
                    <div class="cabecalhoPrincipal-navegacao col-8">
                        <a href="#" class="login">
                            <i class="fas fa-sign-in-alt"></i>Login
                        </a>
                    </div>
                </div>
            </div>
    </header>
    <main class="conteudoPrincipal">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <h1> Listagem de Produtos </h1>
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-dark" > 
                        <a href="produtos/form">Cadastrar Nova</a>
                    </button>
                </div>
            </div>
            <div class="row">
                <table id="produtos"  class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <td>ID</td>
                            <td>Descrição</td>
                            <td>Valor base</td>
                        </tr>
                    </thead>
                        <tr id="produto_${produto.id}"  for (produto in data.produtos)>
                            <a href="/form/${produto.id}" class="parent" style="display: block;width: 300px;"></a>
                            <td><a href="/produtos/view/${produto.id}">${produto.id}</a></td>
                            <td>${produto.descricao}</td>
                            <td>${produto.valor}</td>
                            <td><a href="/produtos/form/${produto.id}">Editar</a></td>
                            <td><a href="#" data-ref="${produto.id}" data-type="remocao">Remover</a></td>
                        </tr>
                </table> 
            </div>
            <script src="estatico/js/remove-produto.js">
            </script>
        </div>
    </main>
    <footer class="rodape">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-4">
                    <h1 class="logo">
                        <img src="/estatico/imagens/simples_logo.png" class="logo-rodape"/>
                    </h1>
                </div>
                <div class="col-8">
                    <ul class="redesSociais">
                        <li><a href="https://www.facebook.com/huntercofanpage/" class="compartilhar-facebook" target="_blank">/SrBouthin</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>