<html>
    <body>
        <h1>Cadastro de Vagas</h1>

        <form action="/vagas" method="post">

            <div if(data.vaga.id)>
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" id="id" name="id" value="${data.vaga.id}" />
            </div>
            <div>
                <label for="job_type">Nome da vaga:</label>
                <input type="text" id="job_type" name="job_type" value="${data.vaga.job_type}" placeholder="coloque o nome da vaga" />
            </div>
            <div>
                <label for="client_id">Nome do cliente:</label>
                <input type="text" id="client_id" name="client_id" value="${data.vaga.client_id}" placeholder="coloque o nome do cliente" />
            </div>
            <div>
                <label for="candidate">Nome do candidato:</label>
                <input type="text" id="candidate" name="candidate" value="${data.vaga.candidate}" placeholder="coloque o nome do candidato" />
            </div>
            <div>
            <label for="value">Valor:</label>
                <input type="text" id="value" name="value" value="${data.vaga.value}" placeholder="150.25" />
            </div>
            <div>
                <label for="refund_reason">Motivo da perda:</label>
                <textarea cols="20" rows="10"  id="refund_reason" name="refund_reason"  placeholder="descreva o motivo da perda">${data.vaga.refund_reason}</textarea>
            </div>
            <div>
                <label for="billed_by">Nome de quem gerou a cobran√ßa:</label>
                <input type="text" id="billed_by" name="billed_by" value="${data.vaga.billed_by}" placeholder="nome de quem gerou a cobranca" />
            </div>
            <select name="eventtype">
                <option id="eventtype" name="eventtype" value="CANDIDATE_SENT">Candidato Enviado</option>
                <option id="eventtype" name="eventtype" value="CANDIDATE_APPROVED">Candidato Contratado</option>
            </select>

            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>